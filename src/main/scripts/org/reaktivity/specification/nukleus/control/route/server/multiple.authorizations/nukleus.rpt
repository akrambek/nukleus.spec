property nukleiR00N ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlR00N ${nukleiR00N.controlNew("example")}

property newServerAcceptRefR00N ${nuklei:newReferenceId()}

connect "agrona://stream/bidirectional"
        option agrona:reader ${agrona:manyToOneReader(controlR00N.nukleus)}
        option agrona:writer ${agrona:broadcastTransmitter(controlR00N.controller)}

connected

read 0x00000001
read (long:correlationId1R00N)
read [0x00]
read [0x06] "source"
read 0L
read [0x06] "target"
read (long:serverConnectRef1R00N)
read [0..8] # authorization
read 0

write 0x40000001
write ${correlationId1R00N}
write ${newServerAcceptRefR00N}
write ${serverConnectRef1R00N}
write flush

read 0x00000001
read (long:correlationId2R00N)
read [0x00]
read [0x06] "source"
read ${newServerAcceptRefR00N}
read [0x06] "target"
read (long:serverConnectRef2R00N)
read [0..8] # authorization
read 0

write 0x40000001
write ${correlationId2R00N}
write ${newServerAcceptRefR00N}
write ${serverConnectRef2R00N}
write flush

close
closed
