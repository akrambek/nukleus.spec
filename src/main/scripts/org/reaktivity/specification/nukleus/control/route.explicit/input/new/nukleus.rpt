property nukleiRE010001N ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlRE010001N ${nukleiRE010001N.controlNew("example")}

connect agrona://stream/bidirectional
        option reader ${agrona:manyToOneReader(controlRE010001N.nukleus)}
        option writer ${agrona:broadcastTransmitter(controlRE010001N.controller)}

connected

read [0x00 0x00 0x00 0x01]
read ([0..8]:correlationIdRE010001N)
read [0x00 0x01]
read [0x06] "source"
read ([0..8]:sourceRefRE010001N)
read [0x06] "target"
read ([0..8]:targetRefRE010001N)
read [0x00]

write [0x40 0x00 0x00 0x01]
write ${correlationIdRE010001N}
write ${sourceRefRE010001N}
write flush

close
closed
